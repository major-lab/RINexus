package ca.iric.major.common;

import com.fasterxml.jackson.core.type.TypeReference;
import com.fasterxml.jackson.databind.ObjectMapper;

import java.io.*;
import java.nio.file.*;
import java.util.List;

/*
 * interface a list of interactions saved in json formatted files (of JsonInteraction)
 *     needs the path to the file
 */

public class JsonInteractionIO {

    private static final ObjectMapper mapper = new ObjectMapper();

    public static List<JsonInteraction> readJsonFile( Path path ) throws IOException {
        try( InputStream in = Files.newInputStream( path ) ) {
            return mapper.readValue(in, new TypeReference<List<JsonInteraction>>() {});
        }
    }

    // overloading to filter by kd values
    public static List<JsonInteraction> readJsonFile( Path path, long maxKd ) throws IOException {
        return readFromJsonFile( path ).stream()
                .filter( i -> i.getKd() <= maxKd )
                .collect( Collectors.toList() );
    }

    public static void writeToJsonFile( Path path, List<JsonInteraction> interactions ) throws IOException {
        try( OutputStream out = Files.newOutputStream( path ) ) {
            mapper.writerWithDefaultPrettyPrinter().writeValue( out, interactions );
        }
    }
}
