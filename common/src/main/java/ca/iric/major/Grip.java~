package ca.iric.major.mirbooking;

import ca.iric.major.common.*;

public class Grip {
    private ProteinCodingTranscript pct;
    private int seedPosition;
    private int suppPosition;
    private int bridge;
    private int distance;

    public Grip( ProteinCodingTranscript pct, int seedPosition, int suppPosition, int bridge ) {
	this.pct = pct;
	this.seedPosition = seedPosition;
	this.suppPosition = suppPosition;
	this.bridge = bridge;
	this.distance = suppPosition - seedPosition - 1;
    }

    public int getSeedPosition() { return this.seedPosition; }
    public int getSuppPosition() { return this.suppPosition; }
    public int getBridge() { return this.bridge; }
    public ProteinCodingTranscript getPCT() { return this.pct; }

    @Override
    public String toString() {
	return "Grip( " + this.pct.getName() + ", " + this.seedPosition + ", " + this.suppPosition + ", " + this.bridge + " )";
    }
}
